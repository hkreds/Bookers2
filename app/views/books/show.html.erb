<main>
  <p id="notice">You have created book successfully.</p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%#= render 'books/userinfo', user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= @book_title %></td>
              <td><%= @book_body %></td>
              <td><%=  link_to "show", book_path(@book.id) %></td>
              <td><%= link_to 'Destroy', destroy_book_path(@book.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>