<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |book| %>
            <tr>
              <td><%= @user_profile_image %></td>
              <td><%= @user_name %></td>
              <td><%=  link_to "show", @user_path %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>